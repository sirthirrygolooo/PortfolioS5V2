---
const { videoSrc = "/videos/background.mp4", fallbackImage = "/social-image.jpg" } = Astro.props;
---

<div class="video-background">
    <video autoplay muted loop playsinline class="video">
        <source src={videoSrc} type="video/mp4" />
        <img src={fallbackImage} alt="Background" class="fallback-image" />
    </video>
</div>

<style>
    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1;
    }

    .video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .fallback-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

</style>
