---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
import BackgroundVideo from "../components/backgroundVideo.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh bg-gray-600/30 z-0"></div>
			<BackgroundVideo
				videoSrc="/videos/abs_vid.mp4"
				fallbackImage="/social-image.jpg"
			/>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large">Jean-Baptiste<br/>Froehly</H1>
				</div>
				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="#">Télécharger mon CV</Link>
							<Link href="/projects" variant="secondary">Mes derniers projets</Link>
						</div>
						<Navigation client:load>
							<Link href="/blog" variant="secondary">Projets</Link>
							<Link href="/about" variant="secondary">Qui suis-je</Link>
							<Link href="/contact" variant="secondary">Me Contacter</Link>
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
